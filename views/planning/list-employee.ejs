<%- include ../header.ejs %>

    <h2><%= __('planning.list') + ' - ' + employee.getName() %></h2>
    <br>
    <table class="table table-sm">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    <%= __('planning.id') %>
                </th>
                <th scope="col">
                    <%= __('planning.createdat') %>
                </th>
                <th class="text-center" scope="col">
                    <%= __('planning.validated') %>
                </th>
                <th scope="col">
                    <%= __n('global.action', 2) %>
                </th>
            </tr>
        </thead>
        <tbody>
            <% for(var planning of plannings) { %>
                <tr class="<%= planning.validated ? "table-success font-weight-bold" : "" %>">
                    <td>
                        <p>
                            <%= planning.id %>
                        </p>
                    </td>
                    <td>
                        <%= planning.getCreatedAtFormated() %>
                    </td>
                    <td class="text-center">
                        <i class="fas fa-check <%= planning.validated ? "visible" : "invisible" %>"></i>
                    </td>
                    <td>
                        <a href="/planning/<%= planning.id %>"><i class="fas fa-pencil-alt"></i></a>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>

    <%- include ../footer.ejs %>
