<%- include ../header.ejs %>

<h2><%= __('category.listing') %></h2>
<br>
<p>
    <a class="btn btn-primary" href="/employee/category/add"><%= __('global.add') %></a>
</p>
<br>
<table class="table">
    <thead>
        <tr>
            <th scope="col"><%= __('category.name') %></th>
            <th scope="col"><%= __n('global.action', 2) %></th>
        </tr>
    </thead>
    <tbody>
        <%
        for(var i in categories) {
            var category = categories[i];
            %>
            <tr>
            <td><%= category.name %></td>
            <td>
            <a href="/employee/category/<%= category.id %>/update" title="<%= __('global.edit') %>"><i class="fas fa-pencil-alt"></i></a>&nbsp;
            <a href="/employee/category/<%= category.id %>/delete" title="<%= __('global.delete') %>"><i class="fas fa-trash-alt"></i></a>
            </td>
            </tr>
            <% } %>
        </tbody>
    </table>

    <%- include ../footer.ejs %>
