<%- include ../header.ejs %>

<nav aria-label="breadcrumb" class="mb-5">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/"><%= __("global.home") %></a></li>
    <li class="breadcrumb-item"><a href="/employee"><%= __("employee.menu") %></a></li>
    <li class="breadcrumb-item"><a href="/employee/category"><%= __("category.menu") %></a></li>
    <li class="breadcrumb-item active" aria-current="page"><%= __("category.edit") %></li>
  </ol>
</nav>

<div class="row">
    <div class="col">
        <form action="/employee/category/<%= category.id %>/update" method="post">
            <div class="form-group row">
                <label class="col-sm-2" for="name"><%= __("category.name") %></label>
                <div class="col-sm-10">
                    <input type="text" name="name" value="<%= category.name %>" class="form-control" id="name" placeholder="<%= __("category.nameexample") %>">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="exampleFormControlSelect1"><%= __("category.interval.name") %></label>
                <div class="col-sm-10">
                    <div class="input-group justify-content-end">
                        <input name="intervalnumber" type="number" step="1" min="1" value="<%= category.interval.number %>" class="form-control">
                        <select class="custom-select" name="intervaltype">
                            <option value="d" <%= category.interval.type == 'd' ? "selected" : "" %>><%= __("category.interval.type.day") %></option>
                            <option value="w" <%= category.interval.type == 'w' ? "selected" : "" %>><%= __("category.interval.type.week") %></option>
                            <option value="m" <%= category.interval.type == 'm' ? "selected" : "" %>><%= __("category.interval.type.month") %></option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="text-right mt-3">
                <button type="submit" class="btn btn-primary text-right"><%= __("global.save") %></button>
            </div>
        </form>
    </div>
</div>

<%- include ../footer.ejs %>
