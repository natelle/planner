<%- include ../header.ejs %>

<nav aria-label="breadcrumb" class="mb-5">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/"><%= __('global.home') %></a></li>
        <li class="breadcrumb-item"><a href="/agenda"><%= __('agenda.menu') %></a></li>
        <li class="breadcrumb-item"><a href="/agenda/<%= category.id %>"><%= category.name %></a></li>
        <li class="breadcrumb-item active"><%= year %></li>
    </ol>
</nav>

<div class="row align-items-center">
    <div class="col-md-1">
        <a href="/agenda/<%= category.id %>/<%= parseInt(year) - 1 %>"><i class="fas fa-angle-left fa-2x"></i></a>
    </div>
    <div class="col-md-10 text-center">
        <ul class="list-unstyled">
            <% var now = new Date();
            for(var i=1; i<=12; i++) { %>
            <li>
                <% if(now.getMonth() == (i-1)) { %>
                    <h4>
                        <b>
                            <a href="/agenda/<%= category.id %>/<%= i.toString().padStart(2, '0') + year %>">
                                <%= __('time.month' + i)%> <%= year %>
                            </a>
                        </b>
                    </h4>
                <% } else { %>
                    <h5>
                        <a href="/agenda/<%= category.id %>/<%= i.toString().padStart(2, '0') + year %>">
                            <%= __('time.month' + i)%> <%= year %>
                        </a>
                    </h5>
                <% } %>
            </li>
            <% } %>
        </ul>
    </div>
    <div class="col-md-1">
        <a href="/agenda/<%= category.id %>/<%= parseInt(year) + 1 %>"><i class="fas fa-angle-right fa-2x"></i></a>
    </div>
</div>

<%- include ../footer.ejs %>