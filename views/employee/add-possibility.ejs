<%- include ../header.ejs %>

<h2>Présence potentielle de <%= employee.firstName %> <%= employee.lastName %> </h2>
<br>
<form action="/employee/<%= employee.id %>/possibility/add" method="post">
        <div class="form-group row">
            <label class="col-sm-2" for="day">Jour</label>
            <div class="col-sm-10">
                <input type="date" name="day" class="form-control" id="day">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2" for="day">Moment</label>
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="type" id="all-day" value="all" checked>
                    <label class="form-check-label" for="all-day">
                        Journée entière
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="type" id="morning" value="morning">
                    <label class="form-check-label" for="morning">
                        Matin
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="type" id="afternoon" value="afternoon">
                    <label class="form-check-label" for="afternoon">
                        Après-midi
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2" for="day">Présence</label>
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="presence" id="presence-yes" value="yes" checked>
                    <label class="form-check-label" for="presence-yes">
                        Oui
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="presence" id="presence-no" value="no">
                    <label class="form-check-label" for="presence-no">
                        Non
                    </label>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Créer</button>
    </form>

    <%- include ../footer.ejs %>
