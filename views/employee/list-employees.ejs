<%- include ../header.ejs %>

<h2><%= __('employee.listing') %></h2>
<br>
<p>
    <a class="btn btn-primary" href="/employee/add"><%= __('global.add') %></a>
</p>
<br>
<table class="table">
    <thead>
        <tr>
            <th scope="col"><%= __('employee.firstname') %></th>
            <th scope="col"><%= __('employee.lastname') %></th>
            <th scope="col"><%= __('employee.category') %></th>
            <th scope="col"><%= __('employee.availabilities') %></th>
            <th scope="col"><%= __n('global.action', 2) %></th>
        </tr>
    </thead>
    <tbody>
        <%
        for(var i in employees) {
            var employee = employees[i];
            %>
            <tr>
            <td><%= employee.firstName %></td>
            <td><%= employee.lastName %></td>
            <td><%= employee.category %></td>
            <td>
            <table class="table table-sm small">
            <thead>
            <th>L</th>
            <th>M</th>
            <th>M</th>
            <th>J</th>
            <th>V</th>
            <th>S</th>
            <th>D</th>
            </thead>
            <tbody>
            <td><%= __(employee.defaultDay2 + "abbr") %></td>
            <td><%= __(employee.defaultDay2 + "abbr") %></td>
            <td><%= __(employee.defaultDay3 + "abbr") %></td>
            <td><%= __(employee.defaultDay4 + "abbr") %></td>
            <td><%= __(employee.defaultDay5 + "abbr") %></td>
            <td><%= __(employee.defaultDay6 + "abbr") %></td>
            <td><%= __(employee.defaultDay0 + "abbr") %></td>
            </tbody>
            </table>
            </td>
            <td>
            <a href="/employee/<%= employee.id %>/update" title="<%= __('global.edit') %>"><i class="fas fa-pencil-alt"></i></a>&nbsp;
            <a href="/employee/<%= employee.id %>/delete" title="<%= __('global.delete') %>"><i class="fas fa-trash-alt"></i></a>&nbsp;
            <a href="/employee/<%= employee.id %>/availabilities" title="<%= __n('availability.availabilities', 2) %>"><i class="fas fa-calendar-alt"></i></a>
            </td>
            </tr>
            <% } %>
        </tbody>
    </table>

    <%- include ../footer.ejs %>
