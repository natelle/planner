<%- include ../header.ejs %>

<nav aria-label="breadcrumb" class="mb-5">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/"><%= __('global.home') %></a></li>
    <li class="breadcrumb-item active"><%= __('global.settings') %></li>
  </ol>
</nav>

<div class="row">
    <div class="col">
        <form action="/settings" method="post">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="name"><%= __('settings.planning.generation.pass') %></label>
                <div class="col-sm-10">
                    <div class="input-group">
                        <input type="number" class="form-control" name="planning.generation.pass" min="0" max="10" step="1" value="<%= settings.planning.generation.pass %>">
                        <div class="input-group-append">
                            <span class="input-group-text" id="basic-addon3"><%= __('settings.planning.generation.passname') %></span>
                        </div>
                    </div>
                </div>
            </div>  

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="name"><%= __('settings.planning.generation.time') %></label>
                <div class="col-sm-10">
                    <div class="input-group">
                        <input type="number" class="form-control" name="planning.generation.time" min="0.5" max="10" step="0.1" value="<%= parseInt(settings.planning.generation.time)/1000 %>">
                        <div class="input-group-append">
                            <span class="input-group-text" id="basic-addon3"><%= __('time.second') %></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="name"><%= __('settings.planning.generation.agendaconstraint') %></label>
                <div class="col-sm-10">
                    <div class="input-group">
                    <select class="custom-select" name="planning.generation.agenda-constraint">
                        <option value="equal" <% if(settings.planning.generation["agenda-constraint"] === "equal") { %>selected<% } %>><%= __('settings.planning.generation.agendaconstraint.equal') %></option>
                        <option value="min" <% if(settings.planning.generation["agenda-constraint"] === "min") { %>selected<% } %>><%= __('settings.planning.generation.agendaconstraint.min') %></option>
                        <option value="max" <% if(settings.planning.generation["agenda-constraint"] === "max") { %>selected<% } %>><%= __('settings.planning.generation.agendaconstraint.max') %></option>
                    </select>
                    </div>
                </div>
            </div>

            <div class="text-right mt-3">
                <button type="submit" class="btn btn-primary text-right"><%= __('global.save') %></button>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function() {
        $("#pass-number").change(function() {
            $("#pass-number-text").val($(this).val());
        });
    });
</script>

<%- include ../footer.ejs %>
